doctype html
html(xmlns:ng="http://angularjs.org/" ng-app='phenoCom')
	head
		title(ng-bind="MetaTags.title") Phenomenon
		meta(name="fragment" content="!")
		base(href="/")
		meta(name="description" content="{{MetaTags.description}}")
		meta(name="keywords" content="{{MetaTags.keywords}}")
		meta(ng-repeat="(key, value) in MetaTags.properties" property="{{key}}" content="{{value}}")
		meta(name="prerender-status-code" content="{{MetaTags.prerender.statusCode}}")
		meta(name="prerender-header" ng-if="MetaTags.prerender.header" content="{{MetaTags.prerender.header}}")


		meta(name="viewport", content="width=device-width, initial-scale=1")
		//- meta(property="og:type" content="website")
		//- meta(property="og:title" content="Phenomenon - Innovations Company")
		//- meta(property="og:description" content="Phenomenon - Innovations Company")
		//- meta(property="og:image" content=require('assets/images/fb-share-center.png'))
		
		// Google Analytics
		script.
			(function (i, s, o, g, r, a, m) {
				i['GoogleAnalyticsObject'] = r;
				i[r] = i[r] || function () {
							(i[r].q = i[r].q || []).push(arguments)
						}, i[r].l = 1 * new Date();
				a = s.createElement(o),
						m = s.getElementsByTagName(o)[0];
				a.async = 1;
				a.src = g;
				m.parentNode.insertBefore(a, m)
			})(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

			ga('create', 'UA-51195233-1', 'phenomenon.com');
			ga('send', 'pageview');

		include ./favicon

	body(class=bodyClass, ng-controller="phenoController")

		.body-wrapper
			include ./components/top-nav

			block content
		.drawer

			include ./components/side-nav
