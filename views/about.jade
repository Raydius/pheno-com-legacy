block variables
- copy = require('app/copy.js')
- page = "about"
- pageData = copy.content[page]


// title and body copy
section.row.no-padding.about
	div.top-main.col-md-12

		h2!= pageData.blockquote
		p!= pageData.subquote

		include components/cite-components
	
	div.col-xs-12.col-md-12.no-padding
		.col-xs-12.col-md-5.no-padding
			figure
				img(src=require('assets/images/about/about1.png'))
				figcaption
					h3 Phenotype
					ul 
						span nonu
						li= pageData.dictionary.nonu
						span verb
						li= pageData.dictionary.verb
		
		section.col-xs-12.col-md-6.col-md-offset-1
			article.col-md-12.border-bottom
				if pageData.paragraph1
					each par in pageData.paragraph1
						p!= par
			article.col-md-12
				if pageData.paragraph2
					each par in pageData.paragraph2
						p!= par

	div.col-xs-12.col-md-12.no-padding.archie
		img(src=require('assets/images/about/about2.png'))
	div.col-md-12.no-padding
		div.col-md-5.no-padding.folders
			img(src=require("assets/images/about/about-folders.png"))
		div.col-md-6.col-sm-offset-0.col-md-offset-1
			article.col-md-12
				if pageData.paragraph3
					each par in pageData.paragraph3
						p!= par
				img(src=require('assets/images/about/about3.png'))
	div.col-md-12.ac
		div.col-md-7.no-padding
			article.col-md-12
				if pageData.paragraph4
					each par in pageData.paragraph4
						p!= par
		div.col-md-5(sticky offset="60")
			section.ac-container
				each contentItem, index in pageData.accordion
					if index==0
						.ac-list
							input(id="ac-"+(index) name="accordion-1" type="radio" checked="")
							label(for="ac-"+(index)	)= contentItem.label
							article.ac-small
								p= contentItem.content
					else
						.ac-list
							input(id="ac-"+(index) name="accordion-1" type="radio")
							label(for="ac-"+(index)	)= contentItem.label
							article.ac-small
								p= contentItem.content
