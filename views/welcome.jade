block variables
- copy = require('app/copy.js')
- page = "home"
- pageData = copy.content[page]


// title and body copy
section.row.no-padding.home
	div.top-main.col-md-12
		h2 
			| The first agency siteâ€¨ <br>written by clients.
		p.red
			| Except for this part. 
		.icon-right-arrow
		ul.row.no-padding.featured-contributors
			h6 Featured Contributors
			// first 3 contributors
			each contributorItem in pageData.contributors
				li.col-sm-12.col-md-4 
					if contributorItem.contributorAvatar 
						img(src=contributorItem.contributorAvatar)
					cite
						if contributorItem.name
							span!= contributorItem.name
						if contributorItem.jobTitle
							span!= contributorItem.jobTitle
					if contributorItem.project
						p!= contributorItem.project
					a.red(href="#") Read full article &gt;
			.clear
			.see-more
				input.red.view-more(type="checkbox" name="toggle" id="toggle") 
				label(for="toggle") 
				.see-more-container
					// six more contributors
					each contributorItem in pageData.contributorsMore
						li.col-sm-12.col-md-4 
							if contributorItem.contributorAvatar 
								img(src=contributorItem.contributorAvatar)
							cite
								if contributorItem.name
									span!= contributorItem.name
								if contributorItem.jobTitle
									span!= contributorItem.jobTitle
							if contributorItem.project
								p!= contributorItem.project
							a.red(href="#") Read full article &gt;
					