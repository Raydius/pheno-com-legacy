- var copy = require('app/copy.js')
- var copyObject = copy.content[htmlWebpackPlugin.options.pageSlug]
- var page = htmlWebpackPlugin.options.pageSlug
- var currentProjectIndex = htmlWebpackPlugin.options.currentProjectIndex

doctype html
html(xmlns:ng="http://angularjs.org/" ng-app='phenoCom')
	head
		meta(name="viewport", content="width=device-width, initial-scale=1")

		base(href='/work/#{page}/')

		meta(property="og:url", content="/work/#{page}/")
		meta(property="og:type" content="website")
		meta(property="og:title" content="#{htmlWebpackPlugin.options.title}")
		meta(property="og:description" content="#{copyObject.blockquote}")
		meta(property="og:image" content="#{copyObject.shareImg}")

		title #{htmlWebpackPlugin.options.title}
		include favicon

	body(class=bodyClass)

		.body-wrapper
			include components/work-top-nav

			main.maincontent
				.main-wrapper
					.component
						include components/content-template
					span
					include components/footer
		.drawer
			include components/work-side-nav

