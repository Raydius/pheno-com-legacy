- var copy = require('app/copy.js')
- var copyObject = copy.content[htmlWebpackPlugin.options.pageSlug]
- var page = htmlWebpackPlugin.options.pageSlug
- var currentProjectIndex = htmlWebpackPlugin.options.currentProjectIndex

doctype html
html(xmlns:ng="http://angularjs.org/" ng-app='phenoCom')
	head
		title(ng-bind="MetaTags.title") Phenomenon

		base(href='/work/#{page}/')
		meta(name="keywords" content="#{htmlWebpackPlugin.options.keywords}")
		meta(name="description" content="#{htmlWebpackPlugin.options.description}") 
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(property="og:url", content="/work/#{page}/")
		meta(property="og:type" content="website")
		meta(property="og:title" content="#{htmlWebpackPlugin.options.title}")
		meta(property="og:description" content!="#{copyObject.ogDescription}")
		meta(property="og:image" content="#{copyObject.shareImg}")
		
		// Google Analytics
		script.
			(function (i, s, o, g, r, a, m) {
				i['GoogleAnalyticsObject'] = r;
				i[r] = i[r] || function () {
							(i[r].q = i[r].q || []).push(arguments)
						}, i[r].l = 1 * new Date();
				a = s.createElement(o),
						m = s.getElementsByTagName(o)[0];
				a.async = 1;
				a.src = g;
				m.parentNode.insertBefore(a, m)
			})(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

			ga('create', 'UA-51195233-1', 'phenomenon.com');
			ga('send', 'pageview');

		title #{htmlWebpackPlugin.options.title}
		include favicon

	body(class=bodyClass)

		.body-wrapper
			include components/work-top-nav

			main.maincontent
				.main-wrapper
					.component
						include components/content-template
					span
					include components/footer
		.drawer
			include components/work-side-nav

