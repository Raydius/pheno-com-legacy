article.col-md-4.blog-column
  img(src='{{thumbnail}}', alt='{{alt}}')
  span.blog-title(ng-bind-html="title | toTrusted")
  p.blog-preview(ng-bind-html="preview | toTrusted")
  a(href='{{postUrl}}').read-moreUrl.full-article-link read more >
    .page-divide.end-post.col-md-12
    .col-md-12.author-container
      img.pheno-p(src=require('assets/images/blog/pheno-p.png'))
      .blog-author By {{blogger}}
        .position(ng-if='position == 1') {{positionTitle}}
  .big-divide
